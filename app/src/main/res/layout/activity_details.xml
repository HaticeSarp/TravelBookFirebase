<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activity.DetailsActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:text="Fotoğraf Ekle"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/kamerayaBaglan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_menu_camera" />

    <ImageView
        android:id="@+id/sehirFotografi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <EditText
        android:id="@+id/mekanadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Başlık giriniz" />

    <EditText
        android:id="@+id/mekanaciklama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Açıklama giriniz"
        android:inputType="textMultiLine" />



    <Button
        android:id="@+id/kamerayabaglanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KAMERAYA BAĞLAN" />

    <Button
        android:id="@+id/kaydetButton"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="wrap_content"
        android:text="KAYDET" />
</LinearLayout>